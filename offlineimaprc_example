[general]
accounts = gmail,icloud,gmx,webde,outlook,yahoo,zoho
maxsyncaccounts = 1

[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote
autorefresh = 5

[Repository gmail-remote]
type = Gmail
remotehost = imap.gmail.com
remoteuser = example@gmail.com
remotepass = aaaa bbbb cccc dddd
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository gmail-local]
type = Maildir
localfolders = Mail/gmail
nametrans = lambda f: f.replace('[Gmail]/', 'Gmail-')

# -----------------------------
# iCloud (IMAP)
# -----------------------------
[Account icloud]
localrepository = icloud-local
remoterepository = icloud-remote
autorefresh = 5

[Repository icloud-remote]
type = IMAP
remotehost = imap.mail.me.com
remoteuser = example@icloud.com
remotepass = app-specific-password
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository icloud-local]
type = Maildir
localfolders = Mail/icloud

